@page "/"
@using EventEaseAppBlazor.Models
@using EventEaseAppBlazor.Components
@using Microsoft.AspNetCore.Components.Routing

<h3>Eventos</h3>

@foreach (var evento in eventos)
{
    <NavLink class="text-decoration-none" href="@($"/eventdetails/{evento.Id}")" Match="NavLinkMatch.Prefix">
        <EventCard EventName="@evento.Name" EventDate="@evento.Date" EventLocation="@evento.Location" />
    </NavLink>
}

